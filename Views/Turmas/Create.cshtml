@model escola.Models.Turmas

@{
    ViewData["Title"] = "Create";
}

<h1 class="titulo1">Adicione uma nova</h1>

<h4 class="titulo2">Turma</h4>
<hr />
<div class="centralizar">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group, col-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group, col-6">
                <label asp-for="Materia" class="control-label"></label>
                <input asp-for="Materia" class="form-control" />
                <span asp-validation-for="Materia" class="text-danger"></span>
            </div>
            <div class="form-group, col-12">
                <label asp-for="Professor" class="control-label"></label>
                <input asp-for="Professor" class="form-control" />
                <span asp-validation-for="Professor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" style="width: 100%" />
            </div>
                </div>
        </form>
        <br />
        <div>
            <a asp-action="Index" class="btn btn-danger" style="width: 100%">Voltar para lista</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>
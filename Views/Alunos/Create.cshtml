@model escola.Models.Alunos

@{
    ViewData["Title"] = "Create";
}

<h1 class="titulo1">Adicione um novo</h1>

<h4 class="titulo2">Alunos</h4>
<hr />
<div class="centralizar">

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group, col-6">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group, col-12">
                <label asp-for="DataCadatro" class="control-label"></label>
                <input asp-for="DataCadatro" class="form-control" />
                <span asp-validation-for="DataCadatro" class="text-danger"></span>
            </div>
            <div class="form-group, col-12">
                <label asp-for="Turma" class="control-label"></label>
                <input asp-for="Turma" class="form-control" />
                <span asp-validation-for="Turma" class="text-danger"></span>
            </div>
            </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" style="width: 100%" />
                </div>
        </form>
            <br />
            <div>
                <a asp-action="Index" class="btn btn-danger" style="width: 100%">Voltar para lista</a>
            </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</div>